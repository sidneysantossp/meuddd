// Função auxiliar para obter estatísticas
export const getStatistics = () => {
  const totalStates = brazilianStates.length;
  const totalDDDCodes = new Set(brazilianStates.flatMap(state => state.dddCodes)).size;
  const totalCities = brazilianStates.reduce((acc, state) => acc + state.cities.length, 0);
  
  return {
    totalStates,
    totalDDDCodes,
    totalCities
  };
};

// Função para buscar estados por região
export const getStatesByRegion = (region: string) => {
  if (region === 'Todos') return brazilianStates;
  return brazilianStates.filter(state => state.region === region);
};

// Função para buscar por termo (estado, cidade ou DDD)
export const searchStates = (searchTerm: string) => {
  const term = searchTerm.toLowerCase().trim();
  
  if (!term) return brazilianStates;
  
  return brazilianStates.filter(state => {
    // Busca por nome do estado
    if (state.name.toLowerCase().includes(term)) return true;
    
    // Busca por sigla
    if (state.abbreviation.toLowerCase().includes(term)) return true;
    
    // Busca por código DDD
    if (state.dddCodes.some(ddd => ddd.includes(term))) return true;
    
    // Busca por cidade
    if (state.cities.some(city => city.name.toLowerCase().includes(term))) return true;
    
    // Busca por capital
    if (state.capital.toLowerCase().includes(term)) return true;
    
    return false;
  });
};
